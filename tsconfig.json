{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2017", "es2018", "es2019", "es2020", "dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "./components/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "declarations.d.ts"
  ]
}